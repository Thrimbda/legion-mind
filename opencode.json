{
  "$schema": "https://opencode.ai/config.json",
  "default_agent": "legion",
  "share": "disabled",
  "compaction": {
    "auto": true,
    "prune": true
  },
  "permission": {
    "edit": "allow",
    "webfetch": "deny",
    "external_directory": "deny",
    "doom_loop": "deny",
    "bash": {
      "*": "allow",
      "rm *": "deny",
      "rm -rf *": "deny",
      "sudo *": "deny",
      "curl *": "deny",
      "wget *": "deny",
      "ssh *": "deny",
      "scp *": "deny",
      "dd *": "deny",
      "mkfs*": "deny",
      "bash -c *": "deny",
      "sh -c *": "deny",
      "python -c *": "deny",
      "python3 -c *": "deny",
      "node -e *": "deny",
      "perl -e *": "deny",
      "ruby -e *": "deny"
    }
  }
}
